package item

import "github.com/xlund/tracker/internal/domain"
import "fmt"

templ User(user domain.User) {
	<tr>
		<td>{ user.Name }</td>
		<td>{ user.Username }</td>
		<td>
			<a
				hx-get={ string(templ.URL(fmt.Sprintf(
                            "/users/%s",
                            user.ID))) }
			>View</a>
			<a
				hx-delete={ string(templ.URL(fmt.Sprintf(
                            "/users/%s",
                            user.ID))) }
			>Delete</a>
		</td>
	</tr>
}
